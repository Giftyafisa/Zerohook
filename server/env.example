# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_NAME=hkup_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Blockchain Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
ESCROW_PRIVATE_KEY=your_escrow_wallet_private_key
ESCROW_CONTRACT_ADDRESS=your_escrow_contract_address

# Payment Configuration

# Stripe (Legacy payment method)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Paystack (Primary international payment method)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Crypto Payment Configuration
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_api_key
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
BITCOIN_NETWORK=mainnet

# Bitnob Configuration (Ghanaian crypto platform)
BITNOB_API_KEY=your_bitnob_api_key
BITNOB_SECRET_KEY=your_bitnob_secret_key

# Country Detection Configuration
IP_GEOLOCATION_SERVICE=ip-api.com
DEFAULT_COUNTRY=NG
SUPPORTED_COUNTRIES=NG,GH,KE,ZA,UG,TZ,RW,BW,ZM,MW

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Trust & Verification Configuration
FACE_API_MODELS_PATH=./models
VERIFICATION_THRESHOLD=0.8
REPUTATION_DECAY_RATE=0.95

# Escrow Configuration
ESCROW_FEE_PERCENTAGE=5
DISPUTE_RESOLUTION_DAYS=7
AUTO_RELEASE_DAYS=3
